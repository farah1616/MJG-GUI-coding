    private void registerbttnActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
             // TODO add your handling code here:
        //validate existing data
        String Name = nametxt.getText();
        String Staffid = staffidtxt.getText();
        String Phonenum = phonenumtxt.getText();
        String Username = usernametxt.getText();
        String password = Pass.getText();
        if(Name.isEmpty()|| Staffid.isEmpty()||Phonenum.isEmpty()|| Username.isEmpty()){
            JOptionPane.showMessageDialog(this,"Data cannot empty","Error ",JOptionPane.ERROR_MESSAGE);
        }
        else{
            //fileiousername password
        String name,staff,phone,user,pass,inPass,inName,inStaffid,inPhone,inUser;
        
        boolean found=false;
        inName=nametxt.getText();
        inStaffid=staffidtxt.getText();
        inPhone=phonenumtxt.getText();
        inUser=usernametxt.getText();
        inPass=Pass.getText();
        
        try{
            FileReader reader =new FileReader("Registration.txt");
             FileWriter file = new FileWriter("Registration.txt",true);//write new file io
             FileWriter file1 = new FileWriter("user.txt",true);
            PrintWriter outFile=new PrintWriter(file);
            PrintWriter outFile1=new PrintWriter(file1);
            
            Scanner in = new Scanner(reader);
            
            
            while(in.hasNextLine()){
                String line =in.nextLine();
                StringTokenizer st = new StringTokenizer(line,";");
                name=st.nextToken();
                staff=st.nextToken();
                phone=st.nextToken();
                user=st.nextToken();
               
                
                if(name.equals(inName)&&staff.equals(inStaffid)&&phone.equals(inPhone)){
                    found=true;

                }
            }
        
        if(found)
            JOptionPane.showMessageDialog(null,"Already Registered!");
        
        else{
            JOptionPane.showMessageDialog(null,"Register succesfully!");
            nametxt.setText("");
            staffidtxt.setText("");
            phonenumtxt.setText("");
            usernametxt.setText("");
            outFile.println(Name+";"+Staffid+";"+Phonenum+";"+Username);//print file txt
            outFile1.println(Username+";"+password);//print file txt
            new loginpage().setVisible(true);
            this.setVisible(false);
        }
        reader.close();
        outFile.close();
        outFile1.close();
        }catch(Exception e){//catch semua jenis exception
            System.out.print(e.toString());//kalau ada error between block dia akan catch
         }
        }
    }                                            

       
