    private void exitMouseClicked(java.awt.event.MouseEvent evt) {                                  
        // TODO add your handling code here:
        int response= JOptionPane.showConfirmDialog(this,"Do you want to exit this system?",
                "Confirmation",JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE);
        
        //display result
        if(response==JOptionPane.YES_OPTION){
            //if yes
        System.out.println("yes selected");//printing in source
        new startuppage().setVisible(true);//return to startup
        this.setVisible(false);
        }else if (response==JOptionPane.NO_OPTION){
            //no selected
            System.out.println("no selected");
        }else if(response==JOptionPane.CLOSED_OPTION){
            //close dialog box
            System.out.println("Close dialog message");
        }
 
    }                                 

