    private void loginlMouseClicked(java.awt.event.MouseEvent evt) {                                    
        // TODO add your handling code here:
        
        String username = usernametxt.getText();
        String password = jPasswordField1.getPassword().toString();
        if(username.isEmpty()|| password.isEmpty()){
            JOptionPane.showMessageDialog(this,"Username/Password cannot empty","Error ",JOptionPane.ERROR_MESSAGE);
        }
        else{
            //fileiousername password
        String user,pass,inUser,inPass;
        
        boolean found=false;
        inUser=usernametxt.getText();
        inPass=jPasswordField1.getText();
        
        Date date = new Date();
        
        try{
            FileReader reader =new FileReader("user.txt");
            FileWriter file = new FileWriter("logAccessUser.txt",true);//write file io of user login
            PrintWriter outFile=new PrintWriter(file);
            
            Scanner in = new Scanner(reader);
            
            
            while(in.hasNextLine()){
                String line =in.nextLine();
                StringTokenizer st = new StringTokenizer(line,";");
                
                user=st.nextToken();
                pass=st.nextToken();
                
                if(user.equals(inUser)&& pass.equals(inPass)){// kalau betul conditon
                    found=true;
                    
                    outFile.println(username+":"+date.toString());//print file txt
                    break;
                }
            }
        
        if(found){
            JOptionPane.showMessageDialog(null,"Access Granted!,Welcome to MJG Store System "
                    +inUser,"Login valid",JOptionPane.INFORMATION_MESSAGE);
            new MenuList().setVisible(true);
            this.setVisible(false);
        }
        else
          JOptionPane.showMessageDialog(null,"Access Denied!,Please enter correct Username and password"
                  ,"Login invalid",JOptionPane.ERROR_MESSAGE);
        
        //close file io
             reader.close();
             outFile.close();
        }catch(Exception e){//catch semua jenis exception
            System.out.print(e.toString());//kalau ada error between block dia akan catch
         }
        }
        String mag=usernametxt.getText();
        new MenuList(mag).setVisible(true);
        setVisible(false);
    }                                   

