    private void clock(){//time generated
        try{
            Timer timer = new Timer(1000, new ActionListener(){

                @Override
                public void actionPerformed(ActionEvent e) {
                    Calendar cal1 = new GregorianCalendar();
                    Calendar cal2 = cal1.getInstance();
                    //date and time format
                    String date= new SimpleDateFormat("dd '-' MM '-' YYYY (EEEE)")
                            .format(Calendar.getInstance().getTime()).toUpperCase();
                    String time = new SimpleDateFormat("hh':'mm ")
                            .format(Calendar.getInstance().getTime());
                    // printing condition for am and pm
                    String am_pm;
                    if(cal1.get(Calendar.AM_PM)== 0){
                        am_pm = "AM";
                    }
                    else
                        am_pm = "PM";
                    datetxt.setText("Date: "+date);
                    timetxt.setText("Time: "+time+" "+am_pm);
                }
         });
            timer.start();
        }catch(Exception e){
            e.printStackTrace();
        }
    }

