    private void exitbtuuonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        //confirmation dialog message
        int response= JOptionPane.showConfirmDialog(this,"Do you want to exit this System?","Confirmation",
                JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE);
        
        //display result
        if(response==JOptionPane.YES_OPTION){
            //if yes
        System.out.println("yes selected");//printing in source
        System.exit(0);
        }else if (response==JOptionPane.NO_OPTION){
            //no selected
            System.out.println("no selected");
        }else if(response==JOptionPane.CLOSED_OPTION){
            //close dialog box
            System.out.println("Close dialog message");
        }
    }                                          

